{
  "manifest_version": 2,
  "name": "AIチャット目次 (Gemini用)",
  "version": "1.1",
  "description": "Geminiのチャット履歴から目次を作成します。",

  "permissions": [
    "activeTab",
    "*://gemini.google.com/*"
  ],

  "browser_action": {
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["*://gemini.google.com/*"],
      "js": ["content.js"]
    }
  ],

  "commands": {
    "_execute_browser_action": {
      "suggested_key": {
        "default": "Ctrl+Shift+F",
        "mac": "Command+Shift+F"
      },
      "description": "ポップアップを開きます"
    }
  }
}
